.avatar-circle
  border-radius 50%

.widget-container
  position relative

  .widget
    display flex
    flex-direction column
    overflow hidden
    height 100%;

    .widget-title
      flex 0 0 auto

    .content
      flex 1
      font-size 1em
      color $gray-light
      overflow-y auto
      scrollbar-width none

      .pull-requests

        .pull-requests-item
          padding 5px 0
          border-bottom 1px solid #808080
          overflow hidden
          display flex
          flex-direction row
          align-items center

          a
            color unset
            text-decoration none
      
          .pull-requests-item-avatar
            img
              height 3em
              width auto
              background-color white
      
          .pull-requests-item-content
            overflow hidden
            margin-left 1em
            width 100%
            display flex
            flex-direction column
      
            .pull-requests-item-content-ticket
              overflow hidden
              white-space nowrap
              text-overflow ellipsis
      
              font-size 1.5em
              font-weight bold
      
            .pull-requests-item-content-branch
              overflow hidden
              white-space nowrap
              text-overflow ellipsis
              display flex
              flex-direction row
              gap 0.3em
              align-items center
      
              font-size 1em
              font-weight normal
              font-style italic
              height 1.5em
      
              img.pull-requests-item-content-branch-icon
                max-height 100%
                width auto
                opacity 0.5
      
              .wrapper
                height 100%
      
                img
                  display block
                  max-height 100%
                  width auto
      
                img.reviewer-approved
                  border 0.1em solid #36b37e
      
                img.reviewer-needs-work
                  border 0.1em solid #ffab00
      
      
              .wrapper:first-of-type
                margin-left .7em
      
              .pull-requests-item-content-tasks
                  flex 1
                  text-align right
      
                span
                  color crimson
                  margin-left 0.2em
                  font-style normal

.overlay
    position absolute
    bottom -1px
    left -1px
    right -1px
    background-image linear-gradient(to bottom, transparent, rgb(24, 24, 24))
    pointer-events none
    height 2rem












